<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/photos_recycler_view_row_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/author_name"
        android:layout_width="@dimen/author_name_width"
        android:layout_height="@dimen/author_name_height"
        android:layout_marginStart="@dimen/author_name_margin_start"
        android:layout_marginTop="@dimen/author_name_margin_top"
        android:layout_marginEnd="@dimen/author_name_margin_end"
        android:layout_marginBottom="@dimen/author_name_margin_bottom"
        android:textAlignment="center"
        android:textSize="@dimen/author_name_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/photo_image"
        android:layout_width="@dimen/photo_image_width"
        android:layout_height="@dimen/photo_image_height"
        android:layout_marginStart="@dimen/photo_image_margin_start"
        android:layout_marginEnd="@dimen/photo_image_margin_end"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/author_name"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>